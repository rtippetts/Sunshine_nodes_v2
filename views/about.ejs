    <style>
        body {
            font-family: 'Source Sans Pro', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #ffffff;
            color: #333;
            line-height: 1.6;
        }
        header {
            background-color: #ebbe4d; /* 60% - Main Color */
            color: white;
            padding: 20px;
            text-align: center;
            position: relative;
        }

        nav {
            margin: 20px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        nav a {
            text-decoration: none;
            color: white;
            font-weight: bold;
            margin: 0 15px;
        }
        
        nav a img {
